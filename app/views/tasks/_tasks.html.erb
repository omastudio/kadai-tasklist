  <table class="table table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>ステータス</th></th>
        <th>タスク内容</th>
        <th>管理</th>
      </tr>
    </thead>
    <tbody>
      <% if @tasks.any? %>
        <% @tasks.each do |task| %>
          <% if task.user_id == current_user.id %>
            <tr>
              <td><%= link_to task.id, task %></td>
              <td><%= task.status %></td>
              <td><%= task.content %></td>
              <td><%= link_to "削除", task, method: :delete, data: { confirm: "本当に削除しますか？" }, class: 'btn btn-danger btn-xs' %></td>
            </tr>
          <% end %>
        <% end %>
      <% end %>
    </tbody>
  </table>

