<% if logged_in? %>
  <div class="row">
    <aside class="col-md-12">
    <p>ログインユーザ: <%= current_user.name %></p>
    <%= render 'tasks/tasks', tasks: @tasks %>
    <%= link_to 'タスクの追加', new_task_path, class: "btn btn-primary" %>
    </aside>
  </div>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Welcome to the TaskList</h1>
      <%= link_to 'ユーザー登録', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>